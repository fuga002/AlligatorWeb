<div class="registration-container">
    <h2>Тезкор буюртма бериш учун</h2>

    <div class="form-group">
        <label for="firstName">Исмингиз:</label>
        <InputText id="firstName" @bind-Value="_registrationModel.FirstName" class="form-control" />
        @if (_submitted && string.IsNullOrWhiteSpace(_registrationModel.FirstName))
        {
            <p style="color:red;">Исм киритилиши шарт</p>
        }
    </div>

    <div class="form-group">
        <label for="lastName">Фамилиянгиз:</label>
        <InputText id="lastName" @bind-Value="_registrationModel.LastName" class="form-control" />
        @if (_submitted && string.IsNullOrWhiteSpace(_registrationModel.LastName))
        {
            <p style="color:red;">Фамилия киритилиши шарт</p>
        }
    </div>

    <div class="form-group">
        <label for="phoneNumber">Телефон рақам:</label>
        <InputText id="phoneNumber" @bind-Value="_registrationModel.PhoneNumber" class="form-control" />
        @if (_submitted && string.IsNullOrWhiteSpace(_registrationModel.PhoneNumber))
        {
            <p style="color:red;">Телефон рақам киритилиши шарт</p>
        }
    </div>

    @if (_submitted && IsValidSubmission())
    {
        <button type="submit" class="btn btn-primary" @onclick="HandleSubmit">Буюртма бериш</button>
    }
    else
    {
        <button type="submit" class="btn btn-primary" @onclick="SubmitForm">Буюртма бериш</button>
    }
</div>

@code {
    private readonly RegistrationModel _registrationModel = new RegistrationModel();
    private bool _submitted = false;
    private async Task SubmitForm()
    {
        _submitted = true;
        bool check = IsValidSubmission();
        if (check)
        {
            var message = $"Ism : {_registrationModel.FirstName} \n" +
                          $"Familiya : {_registrationModel.LastName} \n" +
                          $"Telefon raqam : {_registrationModel.PhoneNumber} \n";
            await BotService.SendMessageAsync(message);
            await Task.Delay(1000);
            NavigationManager.NavigateTo("/notification", forceLoad: true);
        }
    }

    private void AboutSite()
    {
        NavigationManager.NavigateTo("/about");
    }
    private async Task Register()
    {
        await JsRuntime.InvokeVoidAsync("openNotification", "/register", 400, 300);

    }

    private bool IsValidSubmission()
    {
        return !string.IsNullOrWhiteSpace(_registrationModel.FirstName) &&
               !string.IsNullOrWhiteSpace(_registrationModel.LastName) &&
               !string.IsNullOrWhiteSpace(_registrationModel.PhoneNumber);
    }

    private void HandleSubmit()
    {
        // Handle form submission logic here
    }

    public class RegistrationModel
    {
        public string FirstName { get; set; }
        public string LastName { get; set; }
        public string PhoneNumber { get; set; }
    }
}
